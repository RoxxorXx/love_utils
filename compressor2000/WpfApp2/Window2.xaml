<Window x:Class="WpfApp2.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Ajouter un fonctionnalité" Height="250" Width="500" MinWidth="500" MinHeight="250">
    <Grid>
        <TextBlock x:Name="featuresDesc" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Ajoutez une fonctionnalité" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="textBox" Margin="10,31,10,49" TextWrapping="Wrap" Text="Fonctionnalité" AcceptsReturn="True" AcceptsTab="True"/>
        <Button x:Name="addBtn" Content="Ajouter" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="75" Click="AddBtn_Click"/>

    </Grid>
</Window>
